{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": false,
      "groupName": "jest monorepo",
      "labels": ["enhancement"],
      "sourceUrlPrefixes": ["https://github.com/facebook/jest"]
    },
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
