{
  "extends": [
    "config:base",
    ":automergeMinor",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "widen"
    },
    {
      "depTypeList": ["devDependencies"],
      "excludePackageNames": ["jest", "jest-snapshot"],
      "rangeStrategy": "pin"
    },
    {
      "depTypeList": ["devDependencies"],
      "extends": [":automergeDisabled"],
      "packageNames": ["jest", "jest-snapshot"],
      "rangeStrategy": "pin"
    }
  ]
}
