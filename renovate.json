{
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "automerge": false,
      "groupName": "jest monorepo",
      "labels": ["enhancement"],
      "sourceUrlPrefixes": ["https://github.com/facebook/jest"],
      "updateTypes": ["major", "minor"]
    },
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "del"
      ],
      "allowedVersions": "< 7.0.0"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
